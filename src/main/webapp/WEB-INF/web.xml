<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>Archetype Created Web Application</display-name>
    <!--后台管理员新增商品-->
    <servlet>
        <servlet-name>AddCommodityServlet</servlet-name>
        <servlet-class>com.servlet.commodity.AddCommodityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCommodityServlet</servlet-name>
        <url-pattern>/addCommodity.do</url-pattern>
    </servlet-mapping>
    <!--根据id获取商品图-->
    <servlet>
        <servlet-name>GetOnePhotoServlet</servlet-name>
        <servlet-class>com.servlet.GetOne.CommodityGetOnePhotoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetOnePhotoServlet</servlet-name>
        <url-pattern>/getOnePhoto.do</url-pattern>
    </servlet-mapping>
    <!--购物车数据删除的Servlet-->
    <servlet>
        <servlet-name>DeleteCarServlet</servlet-name>
        <servlet-class>com.servlet.DeleteCar.DeleteCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCarServlet</servlet-name>
        <url-pattern>/deleteCar.do</url-pattern>
    </servlet-mapping>
    <!--购物车内商品数量操作的Servlet-->
    <servlet>
        <servlet-name>UpdateCarServlet</servlet-name>
        <servlet-class>com.servlet.UpdateCar.UpdateCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCarServlet</servlet-name>
        <url-pattern>/updateCar.do</url-pattern>
    </servlet-mapping>
    <!--将商品添加入购物车的Servlet-->
    <servlet>
        <servlet-name>CarServlet</servlet-name>
        <servlet-class>com.servlet.Car.CarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarServlet</servlet-name>
        <url-pattern>/car.do</url-pattern>
    </servlet-mapping>
    <!--商品数据展示列表的Servlet-->
    <servlet>
        <servlet-name>CommodityServlet</servlet-name>
        <servlet-class>com.servlet.commodity.CommodityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommodityServlet</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>
    <!-- 商品详细信息的 Servlet-->
    <servlet>
        <servlet-name>CommodityGetOneServlet</servlet-name>
        <servlet-class>com.servlet.GetOne.CommodityGetOneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommodityGetOneServlet</servlet-name>
        <url-pattern>/commodityDetails.do</url-pattern>
    </servlet-mapping>
    <!-- 用户登陆的 Servlet -->
    <servlet>
        <servlet-name>userLoginServlets</servlet-name>
        <servlet-class>com.servlet.user.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLoginServlets</servlet-name>
        <url-pattern>/userLogin.do</url-pattern>
    </servlet-mapping>

    <!-- 用户注册的 Servlet -->
    <servlet>
        <servlet-name>userRegisterServlets</servlet-name>
        <servlet-class>com.servlet.user.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userRegisterServlets</servlet-name>
        <url-pattern>/userRegister.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>details</servlet-name>
        <jsp-file>/WEB-INF/views/details.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>details</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>

    <!-- 跳转到用户注册页 -->
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/views/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- 跳转到登录成功页 -->
    <servlet>
        <servlet-name>userindex</servlet-name>
        <jsp-file>/WEB-INF/views/userindex.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>userindex</servlet-name>
        <url-pattern>/userindex</url-pattern>
    </servlet-mapping>
    <!--跳转到后台管理员界面首页-->
    <servlet>
        <servlet-name>managerlogin</servlet-name>
        <jsp-file>/WEB-INF/views/managerlogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>managerlogin</servlet-name>
        <url-pattern>/managerlogin</url-pattern>
    </servlet-mapping>
    <!--后台新增商品-->
    <servlet>
        <servlet-name>commodityAdd</servlet-name>
        <jsp-file>/WEB-INF/views/commodityAdd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>commodityAdd</servlet-name>
        <url-pattern>/commodityAdd</url-pattern>
    </servlet-mapping>
    <!--修改商品信息-->
    <servlet>
        <servlet-name>commodityModify</servlet-name>
        <jsp-file>/WEB-INF/views/commodityModify.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>commodityModify</servlet-name>
        <url-pattern>/commodityModify</url-pattern>
    </servlet-mapping>
    <!--后台商品管理界面-->
    <servlet>
        <servlet-name>commodity</servlet-name>
        <jsp-file>/WEB-INF/views/commodity.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>commodity</servlet-name>
        <url-pattern>/commodity</url-pattern>
    </servlet-mapping>
    <!--后台订单管理界面-->
    <servlet>
        <servlet-name>order</servlet-name>
        <jsp-file>/WEB-INF/views/order.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <!-- 顾客管理界面-->
    <servlet>
        <servlet-name>customer</servlet-name>
        <jsp-file>/WEB-INF/views/customer.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>
    <!--后台新增客户-->
    <servlet>
        <servlet-name>customerAdd</servlet-name>
        <jsp-file>/WEB-INF/views/customerAdd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customerAdd</servlet-name>
        <url-pattern>/customerAdd</url-pattern>
    </servlet-mapping>
    <!--修改客户信息-->
    <servlet>
        <servlet-name>customerModify</servlet-name>
        <jsp-file>/WEB-INF/views/customerModify.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customerModify</servlet-name>
        <url-pattern>/customerModify</url-pattern>
    </servlet-mapping>

    <!--管理员登陆的Servlet-->
    <servlet>
        <servlet-name>manageLoginServlets</servlet-name>
        <servlet-class>com.servlet.manager.ManagerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manageLoginServlets</servlet-name>
        <url-pattern>/managerLogin.do</url-pattern>
    </servlet-mapping>
    <!--跳转到管理员登录页面-->
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/WEB-INF/views/admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>findUserByUserName</servlet-name>
        <servlet-class>com.servlet.find.FindUserByUserName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findUserByUserName</servlet-name>
        <url-pattern>/findUserName.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/views/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
<!--查询用户信息-->
    <servlet>
        <servlet-name>select</servlet-name>
        <servlet-class>com.servlet.GetUser.getUserByUserName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>select</servlet-name>
        <url-pattern>/getUserByUserName.do</url-pattern>
    </servlet-mapping>
    <!--个人中心-->
    <servlet>
        <servlet-name>self</servlet-name>
        <jsp-file>/WEB-INF/views/self.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>self</servlet-name>
        <url-pattern>/self</url-pattern>
    </servlet-mapping>
    <!--修改个人密码-->
    <servlet>
        <servlet-name>updatePassword</servlet-name>
        <servlet-class>com.servlet.UpdatePassword.UpdatePasswordByUserName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updatePassword</servlet-name>
        <url-pattern>/updatePasswordByUserName.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchPassword</servlet-name>
        <servlet-class>com.servlet.UpdatePassword.SearchPasswordByUserName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchPassword</servlet-name>
        <url-pattern>/searchPasswordByUserName.do</url-pattern>
    </servlet-mapping>

   <!--修改密码跳转-->
    <servlet>
        <servlet-name>password</servlet-name>
        <jsp-file>/WEB-INF/views/password.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>password</servlet-name>
        <url-pattern>/password</url-pattern>
    </servlet-mapping>
    
</web-app>
