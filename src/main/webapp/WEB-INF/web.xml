<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>Archetype Created Web Application</display-name>
    <!-- 用户登陆的 Servlet -->
    <servlet>
        <servlet-name>userLoginServlets</servlet-name>
        <servlet-class>com.servlet.user.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLoginServlets</servlet-name>
        <url-pattern>/userLogin.do</url-pattern>
    </servlet-mapping>

    <!-- 用户注册的 Servlet -->
    <servlet>
        <servlet-name>userRegisterServlets</servlet-name>
        <servlet-class>com.servlet.user.UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userRegisterServlets</servlet-name>
        <url-pattern>/userRegister.do</url-pattern>
    </servlet-mapping>

    <!-- 跳转到用户注册页 -->
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/views/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- 跳转到登录成功页 -->
    <servlet>
        <servlet-name>success</servlet-name>
        <jsp-file>/WEB-INF/views/success.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>managerlogin</servlet-name>
        <jsp-file>/WEB-INF/views/managerlogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>managerlogin</servlet-name>
        <url-pattern>/managerlogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>commodityAdd</servlet-name>
        <jsp-file>/WEB-INF/views/commodityAdd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>commodityAdd</servlet-name>
        <url-pattern>/commodityAdd</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>commodityModify</servlet-name>
        <jsp-file>/WEB-INF/views/commodityModify.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>commodityModify</servlet-name>
        <url-pattern>/commodityModify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>commodity</servlet-name>
        <jsp-file>/WEB-INF/views/commodity.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>commodity</servlet-name>
        <url-pattern>/commodity</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>order</servlet-name>
        <jsp-file>/WEB-INF/views/order.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>customer</servlet-name>
        <jsp-file>/WEB-INF/views/customer.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>customerAdd</servlet-name>
        <jsp-file>/WEB-INF/views/customerAdd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customerAdd</servlet-name>
        <url-pattern>/customerAdd</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>customerModify</servlet-name>
        <jsp-file>/WEB-INF/views/customerModify.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>customerModify</servlet-name>
        <url-pattern>/customerModify</url-pattern>
    </servlet-mapping>

    <!--管理员登陆的Servlet-->
    <servlet>
        <servlet-name>manageLoginServlets</servlet-name>
        <servlet-class>com.servlet.manager.ManagerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manageLoginServlets</servlet-name>
        <url-pattern>/managerLogin.do</url-pattern>
    </servlet-mapping>
    <!--跳转到管理员登录页面-->
    <servlet>
        <servlet-name>admin</servlet-name>
        <jsp-file>/WEB-INF/views/admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>findUserByUserName</servlet-name>
        <servlet-class>com.servlet.find.FindUserByUserName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>findUserByUserName</servlet-name>
        <url-pattern>/findUserName.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/views/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app>
